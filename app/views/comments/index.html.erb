<div class="container">
  <% if user_signed_in? %>
    <!-- ユーザーがログインしている時の処理 -->
    <h1 class="text-center my-4">リンクのページ修正</h1>
    <div class="d-grid gap-3">
      <%= link_to "ライブルーム一覧", "/live_rooms", class: 'btn btn-outline-primary btn-lg' %>
      <%= link_to "ライブルーム作成", new_live_room_path, class: 'btn btn-outline-primary btn-lg' %>
    </div>
    <% else %>
      <!-- ユーザーがログインしていない時の処理 -->
      <div class="d-flex align-items-center justify-content-center vh-100">
      <div class="row">
        <div class="col-md-12 text-center">
          <div class="d-flex gap-5 justify-content-center" style="margin-top: -200px;">
            <%= link_to "ログイン", new_user_session_path, class: 'btn btn-outline-warning' %>
            <%= link_to "新規登録", new_user_registration_path, class: 'btn btn-outline-light' %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
