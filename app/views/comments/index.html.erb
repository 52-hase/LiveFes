<h1 class="text-center my-4">リンクのページ</h1>

<div class="container">
  <% if user_signed_in? %>
    <!-- ユーザーがログインしている時の処理 -->
    <div class="alert alert-success text-center">
      <div class="d-grid gap-3">
        <%= link_to "ルーム作成", "/live_rooms", class: 'btn btn-info btn-lg' %>
        <%= link_to "曲のダウンロード", "/download", class: 'btn btn-secondary btn-lg' %>
        <%= link_to "マイページ", "/mypage", class: 'btn btn-success btn-lg' %>
      </div>
    </div>
  <% else %>
    <!-- ユーザーがログインしていない時の処理 -->
    <div class="alert alert-warning text-center">
      <h2>現在ログインしていません</h2>
      <%= link_to "ログイン", new_user_session_path, class: 'btn btn-primary my-2' %>
      <%= link_to "新規登録", new_user_registration_path, class: 'btn btn-success my-2' %>
    </div>
  <% end %>
</div>
