<div class="container">
  <% if user_signed_in? %>
    <!-- ユーザーがログインしている時の処理 -->
    <h1 class="text-center my-4">リンクのページ修正</h1>
      <div class="d-grid gap-3">
        <%= link_to "ルーム一覧", "/live_rooms", class: 'btn btn-outline-primary btn-lg' %>
        <%= link_to "曲のダウンロード", "/download", class: 'btn btn-outline-danger btn-lg' %>
        <%= link_to "マイページ", "/mypage", class: 'btn btn-outline-success btn-lg' %>
        <%= link_to "ルーム作成", new_live_room_path, class: 'btn btn-outline-primary btn-lg' %>
      </div>
    <% else %>
      <!-- ユーザーがログインしていない時の処理 -->
    <div class="bg-image vh-100 d-flex align-items-center justify-content-center background">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-md-6">
            <div class="alert alert-warning text-center p-4">
              <h2 class="mb-4">現在ログインしていません</h2>
              <div class="d-grid gap-2">
                <%= link_to "ログイン", new_user_session_path, class: 'btn btn-outline-primary mb-2' %>
                <%= link_to "新規登録", new_user_registration_path, class: 'btn btn-outline-success' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
