<div class="container">
  <% if user_signed_in? %>
    <div class="d-grid gap-3 justify-content-center" style="margin-top: 100px;">
      <%= link_to "/live_rooms", class: 'btn btn-slash' do %>
        <span>ライブルーム一覧</span>
      <% end %>
      <%= link_to new_live_room_path, class: 'btn btn-slash' do %>
        <span>ライブルーム作成</span>
      <% end %>
      <%= link_to user_path(current_user), class: 'btn btn-slash' do %>
        <span>マイページ</span>
      <% end %>
    </div>
    <% else %>
    <!-- ユーザーがログインしていない時の処理 -->
    <div class="d-flex align-items-center justify-content-center vh-100">
      <div class="row w-50" style="margin-top: -50vh;">
        <div class="col-md-12 text-center">
          <!-- ロゴを追加 -->
          <div class="mb-4">
            <%= image_tag 'logo_LiveFes.png', alt: 'LiveFes Logo', class: 'img-fluid', style: 'max-width: 200px;' %>
          </div>
          <div class="d-flex gap-5 justify-content-center">
            <%= link_to new_user_session_path, class: 'btn btn-border' do %>
              <span>ログイン</span>
            <% end %>
            <%= link_to new_user_registration_path, class: 'btn btn-border' do %>
              <span>新規登録</span>
            <% end %>
          </div>
          <br>
          <div>
            <%= link_to "/live_rooms", class: 'btn btn-border' do %>
              <span>ライブルームを見に行く</span>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>