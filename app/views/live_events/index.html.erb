<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-10 text-white text-center mt-5">
      </br>
      <h4 style="border: 2px solid #1172bd; background-color: rgba(44, 62, 80, 0.5); color: #ecf0f1; padding: 10px; border-radius: 5px; width: 100%; max-width: 300px; margin: 0 auto; opacity: 0.8; white-space: nowrap;">
        開催ライブ一覧
      </h4>
      </br>
      </br>
      <% @live_events.each do |live_event| %>
        <div>
          <%= link_to live_event_path(live_event), class: 'btn btn-slash' do %>
            <span><%= live_event.name %></span>
          <% end %>
        </div>
        </br>
      <% end %>
    </div>
  </div>
</div>
