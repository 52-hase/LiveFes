<div class="d-flex justify-content-center align-items-center" style="height: 50vh;">
  <div class="container">
    <div class="row justify-content-center mt-5">
      <div class="col-md-6">
        <div class="card bg-transparent border-0 text-white">
          <div class="card-body">
            <h1 class="card-title text-center"><%= t('devise.passwords.new.forgot_your_password') %></h1></br>
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
              <% if resource.errors.any? %>
                <% resource.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              <% end %>
              </br>
              <div class="form-group">
                <%= f.label :email, t('devise.passwords.new.email') %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control bg-transparent text-white' %>
              </div>
              <div class="form-group text-left" style="margin-top: 20px;">
                <%= f.submit t('devise.passwords.new.send_instructions_button'), class: "btn btn-outline-secondary" %>
              </div>
            <% end %>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
