<div class="container">
  <div class="row justify-content-center align-items-center" style="min-height: 50vh;">
    <div class="col-md-6">
      <div class="card bg-transparent border-0 text-white">
        <h2 class="text-center text-white">パスワードを変更する</h2>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "form-horizontal" }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>

          <div class="form-group">
            <%= f.label :password, t("新しいパスワード"), class: "col-sm-3 control-label text-white" %>
            <div class="col-sm-9">
              <% if @minimum_password_length %>
                <em class="text-white">(<%= @minimum_password_length %><%= t("文字以上") %>)</em><br />
              <% end %>
              <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control", style: "background-color: transparent; color: white;" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, t("新しいパスワード（確認）"), class: "col-sm-3 control-label text-white" %>
            <div class="col-sm-9">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", style: "background-color: transparent; color: white;" %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
              <%= f.submit t('devise.passwords.edit.change_password_button'), class: "btn btn-outline-secondary" %>
            </div>
          </div>
        <% end %>
      </div>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>