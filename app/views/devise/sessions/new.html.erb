<div class="d-flex justify-content-center align-items-center mt-5" >
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card bg-transparent border-0 text-white mt-5"> <!-- 透過+text-white を追加 -->
          <div class="card-title text-center bg-transparent border-0">
            <h4 class="mb-4"><%= t('devise.sessions.new.log_in') %></h4><br>
          </div>
          <div class="card-body">
            <% if flash[:notice] && !flash[:notice].include?('Translation missing') %>
              <div class="animated-alert text-center">
                <%= flash[:notice] %>
              </div>
            <% elsif flash[:alert] && !flash[:alert].include?('Translation missing') %>
              <div class="animated-alert text-center">
                <%= flash[:alert] %>
              </div>
            <% end %>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-group' }) do |f| %>
              <div class="form-group mb-4">
                <%= f.label :email, t('devise.sessions.new.email'), class: 'font-weight-bold' %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control bg-transparent text-white' %>
              </div>
              <div class="form-group mb-4">
                <%= f.label :password, t('devise.sessions.new.password'), class: 'font-weight-bold' %>
                <%= f.password_field :password, autocomplete: "current-password", class: 'form-control bg-transparent text-white' %>
              </div>

              <% if devise_mapping.rememberable? %>
                <div class="form-group form-check d-flex justify-content-center mb-4">
                  <%= f.check_box :remember_me, class: 'form-check-input me-2' %>
                  <%= f.label :remember_me, t('devise.sessions.new.remember_me'), class: 'form-check-label' %>
                </div>
              <% end %>

              <div class="mt-3 text-center">
                <%= f.submit t('devise.sessions.new.sign_in'), class: 'btn btn-outline-light' %>
              </div>
            <% end %>

            <div class="mt-3 text-center">
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>